<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liuge.wxserv.dao.CwUserDao">
    <select id="queryCwUserById" parameterType="String" resultType="com.liuge.wxserv.entity.CwUser">
        SELECT id, intime, flag, customerid,uid,upwd,uname, uphone,uemail,uwechat,
        uexplain,umemo,cando
        FROM cw_user
        WHERE uid=#{uid}
    </select>
</mapper>